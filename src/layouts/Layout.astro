---
import "../styles/global.scss";

import { useSanityClient } from 'astro-sanity';
import { HoverPrefetch } from 'astro-hover-prefetch';
import Header from "../components/Header.astro";
import Menu from "../components/Menu.astro";
const global = await useSanityClient().fetch(`*[_type=='global'][0]`);
const { title } = Astro.props
const photographyCats = await useSanityClient().fetch(`
  *[_type=='page' && slug.current == "home"][0] {
	content[] {
		...,
		photographyGridItems[]{
			...,
			photography-> {
				_id,
				slug,
			}
		}
	}
  }
`);
const { photographyGridItems } = photographyCats.content[0];
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="sitemap" href="/sitemap-index.xml">
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title ? `${title} | ${global.site_title}` : global.site_title }</title>    
		<HoverPrefetch max={8} />
		<link rel="prefetch" href="/" as="document" >
		{photographyGridItems.map(({photography}) => {
			return (
				<link rel="prefetch" href={`/photography/${photography.slug.current}`} as="document" >
			)
		})}
	</head>
	<body>
		<Header />
		<Menu />
		<main>
			<slot />
		</main>
		<script src="../scripts/global.js"></script>
	</body>
</html>
